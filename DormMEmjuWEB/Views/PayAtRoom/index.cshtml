
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ชำระเงินตามห้อง</title>
    <script src="~/Scripts/angular.min.js"></script>
    <link href="~/Content/startbootstrap/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/startbootstrap/dist/css/sb-admin-2.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/myCSS/SaveMeter.css" rel="stylesheet" />
    <link href="~/Content/startbootstrap/vendor/select2-develop/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Kanit" rel="stylesheet">
    <style>
        body {
            font-family: 'Kanit', sans-serif;
        }
    </style>
</head>
<body>
    <div class="body"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-5">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><center><b>ชำระเงินตามห้อง</b></center></h3>
                    </div>
                    <div class="panel-body">
                        <form>
                            <div class="form-group">
                                <label>หอพัก</label>
                                <select class="form-control" id="dorm" name="dorm">

                                    <option value="M001">
                                        หอชาย(พรพิรุณ)
                                    </option>
                                    <option value="L001">
                                        หอหญิง(ขวัญพิรุณ)
                                    </option>

                                </select>
                            </div>
                            <div class="form-group">
                                <label for="sel1">เดือน</label>
                                <select class="form-control" name="moon" id="moon">
                                    <option value="01">มกราคม</option>
                                    <option value="02">กุมภาพันธ์</option>
                                    <option value="03">มีนาคม</option>
                                    <option value="04">เมษายน</option>
                                    <option value="05">พฤษภาคม</option>
                                    <option value="06">มิถุนายน</option>
                                    <option value="07">กรกฎาคม</option>
                                    <option value="08">สิงหาคม</option>
                                    <option value="09">กันยายน </option>
                                    <option value="10">ตุลาคม</option>
                                    <option value="11">พฤศจิกายน</option>
                                    <option value="12">ธันวาคม</option>
                                </select>
                            </div>
                            <label>ห้อง</label>
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="เช่น 201,219" name="room" value="" />
                            </div>
                            <center>
                                <div class="alert alert-warning">

                                </div>
                            </center>
                            <center>
                                <div class="form-group" id="pay" name="pay">
                                    <input type="submit" class="btn btn-success btn-lg" value="ชำระ" name="payed" disabled>
                                </div>
                            </center>
                            <a href="@Url.Action("index","home")">กลับสู่เมนูหลัก</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/startbootstrap/dist/js/sb-admin-2.min.js"></script>
    <script src="~/Content/startbootstrap/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Content/startbootstrap/vendor/select2-develop/dist/js/select2.full.min.js"></script>
</body>
</html>
